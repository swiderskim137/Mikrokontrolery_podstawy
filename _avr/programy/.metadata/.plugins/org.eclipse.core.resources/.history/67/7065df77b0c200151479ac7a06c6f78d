#include <avr/io.h>
#include <util/delay.h>
#include <avr/interrupt.h>

//definicja LED1 (do którego pinu pod³¹czony LED1)
#define LED1 (1<<PB1)

//definicja LED2 (do którego pinu pod³¹czony LED2)
#define LED2 (1<<PB2)

#define warp (1<<PB4)
#define warp_on !(PINB & warp)

uint8_t klawisz_on(uint8_t klawisz);
int main(void)
{
	//########### I/O ###########
	 DDRB  |= LED1 | LED2;
	 //PORTB |= LED2;
	 DDRB &= ~warp;
	 PORTB |= warp;
	 //##########################
	 while(1){
		 if(klawisz_on(warp))
		 {
			 PORTB |= LED1;
			 _delay_ms (1000);
			 _delay_ms (1000);
			 _delay_ms (1000);
			 PORTB &= ~LED1;
		 }
	 }

}

uint8_t klawisz_on(uint8_t klawisz)
{
	if  ( !((PINB) & klawisz) ){
				_delay_ms(50);
				if (!((PINB) & klawisz)) return 1;
	}
	return 0;
}
